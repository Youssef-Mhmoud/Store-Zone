    include pug/layout/landing
    //- Start Product Card
    section.product
      .container
        h2.product-cat.text-uppercase Best Seller
        .product-container
          span.pre <i class="fa-solid fa-chevron-left"></i>
          span.next <i class="fa-solid fa-chevron-right"></i>
          //- For Loop To iteration Elements
          -for (let i = 0; i < 10; i++)
