              .product-img
                span.discount 50% OFF
                img(src="img/1.jpg" class="img-fluid" alt="")
                a(href="cart.html").btn.card-btn Add To Cart
              .product-info.w-100 
                h2 Brand 
                p Some Details About Brand
                span.price $20
                span.actual-price $40
